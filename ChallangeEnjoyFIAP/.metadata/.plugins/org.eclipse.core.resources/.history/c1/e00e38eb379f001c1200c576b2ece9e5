package br.com.fiap.smartcities.domain;

import java.util.Calendar;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.ManyToOne;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;
import javax.persistence.Temporal;
import javax.persistence.TemporalType;

import org.hibernate.annotations.CreationTimestamp;

@Entity
@Table(name = "tb_vacina")
public class Vacina {

	@Id
	@SequenceGenerator(name="vacina",sequenceName="sq_tb_vacina",allocationSize=1)
	@GeneratedValue(strategy = GenerationType.SEQUENCE, generator="vacina")
	@Column(name = "cd_vacina")
	private Integer id;

	@Column(name = "nm_vacina", length = 100)
	private String nome;

	@Column(name = "ds_descricao", length = 200)
	private String sobrenome;
	
	@CreationTimestamp
	@Temporal(TemporalType.TIMESTAMP)
	@Column(name = "dt_aplicacao")
	private Calendar dataAplicacao;
	
	@CreationTimestamp
	@Temporal(TemporalType.TIMESTAMP)
	@Column(name = "dt_proxima_aplicacao")
	private Calendar dataProximaAplicacao;
	
	@CreationTimestamp
	@Temporal(TemporalType.TIMESTAMP)
	@Column(name = "dh_criacao")
	private Calendar dataCriacao;
	
	@CreationTimestamp
	@Temporal(TemporalType.TIMESTAMP)
	@Column(name = "dh_atualizacao")
	private Calendar dataAtualizacao;
		
	@ManyToOne
	private Contato contato;
	
	//constructors, getters and setters
	
	@Override
	public String toString() {
		return "Vacina [id=" + id + ", nome=" + nome + ", dataCriacao=" + dataCriacao + "]";
	}
	
}